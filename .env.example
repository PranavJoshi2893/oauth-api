# Database connection settings
DB_HOST=localhost        # Hostname of the PostgreSQL server (e.g., localhost or container name)
DB_PORT=5432             # Default PostgreSQL port
DB_NAME=mydatabase       # Name of your PostgreSQL database
DB_USER=myuser           # PostgreSQL username
DB_PASSWORD=mypassword   # PostgreSQL password
DB_SSLMODE=disable       # SSL mode: disable, require, verify-ca, verify-full

# Server configuration
SRV_PORT=8080            # Application/server listening port
